

	<!-- NAVBAR START -->
  <% unless @user.confirmed %>
  <p>
    <%= link_to "Verify your account now.", verify_path %>
  </p>
  <% else -%>

  <nav class="navbar navbar-default">
    <div id = "green" class="container-fluid">

      <div class="navbar-header">
        <ul class="nav navbar-nav list-inline">
          <li>
            <h4 class="navbar-text">Dojo Pong</h4>
          </li>
        </ul>
      </div>
      <div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/dashboards/main">Main Dashboard</a></li>
          <li><a href="/">Log Out</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- NAVBAR end -->

   <div class = "container">

	<!-- Beginning of your About Me of Profile -->
	<div class="row">

	  <div class="col-md-8">
	  	<h3>About Me:</h3>
	  	<p><%= @user.bio %></p>
	  </div>

	  <div class="col-md-4">

	  	<h3><%= @user.first_name %> <%= @user.last_name %></h3>
	  	<div>
	  		<%= image_tag @user.avatar.url(:medium) %>
	  	</div>
	  	<br>
	  	<p><a class="btn btn-default btn-success" href="/users/<%= @user.id %>/edit" role="button">Edit Portfolio</a></p>

	  </div>

	</div>
	<!-- The end of your About Me of Profile -->



	<!-- Beinging of Status of your Profile -->
	<div class="row">
	  <div class="col-md-6">
		<h2>Your Current Status:</h2>

		<ul class="list-group">
		  <li class="list-group-item">
		    <span class="badge"><%= @user.rank %></span>
		    Ranking Status:
		  </li>
		  <li class="list-group-item">
		    <span class="badge"><%= @user.win %></span>
		    How many times you have won:
		  </li>
		  <li class="list-group-item">
		    <span class="badge"><%= @user.loss %></span>
		    How many times you have loss:
		  </li>
		</ul>

	  </div>
	</div>
	<!-- End of the Status of your Profile -->

  <% end %>
</div>
